		<contact type="STRUCTURE" name="CABIN_TOP">
			<location unit="IN">
				<x> 0.0 </x>
				<y> 0.0 </y>
				<z> 2.0 </z>
			</location>
			<static_friction> 1.0 </static_friction>
			<dynamic_friction> 0.8 </dynamic_friction>
